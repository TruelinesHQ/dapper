{
  "name": "statex",
  "version": "1.0.0-beta",
  "description": "State management for any Javascript app",
  "type": "module",
  "types": "dist/types",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "type-check": "tsc",
    "build": "pnpm run postpublish && pnpm run type-check && pnpm run build:node && pnpm run build:web",
    "build:web": "esbuild ./lib/index.ts --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=dist/main.web.js",
    "build:node": "esbuild ./lib/index.ts --bundle --platform=node --outfile=./dist/main.node.js",
    "postpublish": "rm -rf dist"
  },
  "keywords": [
    "statex",
    "state",
    "fast",
    "predictable",
    "fast",
    "performance",
    "efficiency"
  ],
  "author": "Haneen Mahdin <",
  "license": "ISC",
  "repository": "TruelinesHQ/statex",
  "homepage": "https://truelines.io/statex",
  "bugs": "https://github.com/TruelinesHQ/statex/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/haneenmahd"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.5",
    "ts-jest": "^28.0.6",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "esbuild": "^0.14.50",
    "jest": "^28.1.3"
  }
}
